{
  "manifest_version": 3,
  "name": "LinkedIn AI Reply",
  "version": "1.0",
  "description": "Chrome extension for AI-generated LinkedIn message replies.",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["main.js"],
      "css": ["styles/tailwind.css"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}
